/**index.wxss**/
.borderT{
  box-shadow: 0 0 15rpx rgba(0,0,0,.1)
}
.list{
  width: 85%;
  margin: 0 auto;
  padding-bottom: 100rpx;
}
.list .list_info{
  width: 100%;
  margin: 40rpx 0;
}
.list .list_info:not(:first-child){
  margin-top: 80rpx;
}
.list_info image{
  width: 100%;
  height: 480rpx;
  border-radius: 10rpx;
}
.title{
  width: 100%;
  line-height: 15rpx;
  font-size: 26rpx;
  color: #333;
}
.author{
  position: relative;
}
.author text{
  font-size: 24rpx;
  color: #666;
}
.spot{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 10rpx;
}
.spot image{
  width: 40rpx;
  height: 40px;
}
textarea{
  width: 86%;
  height: 90px;
  font-size: 12px;
  color: #333;
  padding: 5% 7%;
  text-align: left
}
.pl{
  font-size: 12px;
  color: #666;
}
.comment{
  margin-top: 15rpx;
  padding: 2% 5%;
  width: 90%;
  height: auto;
  box-shadow: 0 0 5px rgba(0,0,0,.1)
}
.comment text{
  font-size: 24rpx;
  color: #666;
}
.comment text.content{
  width: 290px;
  height: auto;
  line-height: 32rpx;
  display: inline-block;
  font-size: 12px;
  color: #666;
  padding-top: 5px;
}